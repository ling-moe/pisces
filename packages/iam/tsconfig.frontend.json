{
  "extends": "./tsconfig.json",
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true
  },
  "files": [
    "src/app/main.frontend.ts",
  ],
  "include": [
    "src/**/*.frontend.ts",
    "src/**/view/**/*.ts",
    "src/**/domain/**/*.ts",
    "src/**/infra/**/*.frontend.ts",
    "src/app/service/*.service.ts"
  ]
}
