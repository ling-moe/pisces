// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../app/infra/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// 用户信息表
model User {
  // 用户ID
  id                 BigInt     @id @default(autoincrement()) @map("id")
  // 用户名
  username           String     @unique @db.VarChar(30)
  // 用户昵称
  displayName        String     @map("display_name") @db.VarChar(30)
  // 语言,默认是中文
  lang               String     @db.VarChar(30)
  // 地区,默认是中国
  locale             String     @db.VarChar(30)
  // 邮箱
  email              String     @unique @db.VarChar(50)
  // 手机号码
  phone              String     @unique @db.VarChar(11)
  // 用户性别（0男 1女 2未知）
  sex                String     @db.VarChar(5)
  // 用户头像
  avatar             String?    @db.VarChar(100)
  // 密码
  password           String     @db.VarChar(100)
  // 生效开始日期
  effectiveStartDate DateTime   @default(now()) @map("effective_start_date")
  // 生效截至日期
  effectiveEndDate   DateTime?  @map("effective_end_date")
  // 已激活标识
  activedFlag        Boolean    @default(true) @map("actived_flag")
  // 锁定截止时间
  lockedTime         DateTime?  @map("locked_time")
  //  已启用标识·
  enabledFlag        Boolean    @default(true) @map("enabled_flag")
  // 版本号
  versionNum         BigInt     @default(1) @map("version_num")
  // 创建者
  createBy           BigInt     @map("create_by")
  // 创建时间
  createAt           DateTime   @default(now()) @map("create_at")
  // 更新者
  updateBy           BigInt     @map("update_by")
  // 更新时间
  updateAt           DateTime   @updatedAt @map("update_at")
  roleUsers          RoleUser[]

  @@map("iam_user")
}

model Role {
  id          BigInt     @id @default(autoincrement()) @map("id")
  roleCode    String     @map("role_code") @db.VarChar(60)
  roleName    String     @map("role_name") @db.VarChar(60)
  enabledFlag Boolean    @default(true) @map("enabled_flag")
  // 备注
  remark      String?    @db.VarChar(120)
  // 版本号
  versionNum  BigInt     @default(1) @map("version_num")
  // 创建者
  createBy    BigInt     @map("create_by")
  // 创建时间
  createAt    DateTime   @default(now()) @map("create_at")
  // 更新者
  updateBy    BigInt     @map("update_by")
  // 更新时间
  updateAt    DateTime   @updatedAt @map("update_at")
  roleMenus   RoleMenu[]
  roleUsers   RoleUser[]

  @@map("iam_role")
}

model Menu {
  id          BigInt     @id @default(autoincrement()) @map("id")
  menuCode    String     @map("menu_code") @db.VarChar(120)
  menuName    String     @map("menu_name") @db.VarChar(60)
  menuType    String     @map("menu_type") @db.VarChar(10)
  pid         BigInt     @default(0)
  icon        String?    @db.VarChar(30)
  route       String?    @db.VarChar(120)
  menuSort    Int        @default(0)
  enabledFlag Boolean    @default(true) @map("enabled_flag")
  // 备注
  remark      String?    @db.VarChar(120)
  // 版本号
  versionNum  BigInt     @default(1) @map("version_num")
  // 创建者
  createBy    BigInt     @map("create_by")
  // 创建时间
  createAt    DateTime   @default(now()) @map("create_at")
  // 更新者
  updateBy    BigInt     @map("update_by")
  // 更新时间
  updateAt    DateTime   @updatedAt @map("update_at")
  RoleMenu    RoleMenu[]

  @@map("iam_menu")
}

model RoleMenu {
  id       BigInt   @id @default(autoincrement()) @map("id")
  roleId   BigInt   @map("role_id")
  role     Role     @relation(fields: [roleId], references: [id])
  menuId   BigInt   @map("menu_id")
  menu     Menu     @relation(fields: [menuId], references: [id])
  // 创建者
  createBy BigInt   @map("create_by")
  // 创建时间
  createAt DateTime @default(now()) @map("create_at")
  // 更新者
  updateBy BigInt   @map("update_by")
  // 更新时间
  updateAt DateTime @updatedAt @map("update_at")

  @@unique([roleId, menuId])
  @@index([menuId])
  @@map("iam_role_menu")
}

model RoleUser {
  id       BigInt   @id @default(autoincrement()) @map("id")
  roleId   BigInt   @map("role_id")
  role     Role     @relation(fields: [roleId], references: [id])
  userId   BigInt   @map("user_id")
  user     User     @relation(fields: [userId], references: [id])
  // 创建者
  createBy BigInt   @map("create_by")
  // 创建时间
  createAt DateTime @default(now()) @map("create_at")
  // 更新者
  updateBy BigInt   @map("update_by")
  // 更新时间
  updateAt DateTime @updatedAt @map("update_at")

  @@unique([roleId, userId])
  @@index([userId])
  @@map("iam_role_user")
}

// 产品表
model Product {
  // 产品ID
  id              BigInt           @id @default(autoincrement())
  // 产品代码
  code            String           @db.VarChar(60)
  // 产品名称
  name            String           @db.VarChar(120)
  // 产品描述
  desc            String?          @db.Text
  // 产品文档二进制数据
  data            Bytes?           @db.ByteA
  // 版本号
  versionNum      BigInt           @default(1) @map("version_num")
  // 创建者
  createBy        BigInt           @map("create_by")
  // 创建时间
  createAt        DateTime         @default(now()) @map("create_at")
  // 更新者
  updateBy        BigInt           @map("update_by")
  // 更新时间
  updateAt        DateTime         @updatedAt @map("update_at")
  // 包含的域
  domains         Domain[]
  // 包含的特性
  productFeatures ProductFeature[]

  @@map("ddd_product")
}

// 产品域表
model Domain {
  // 域ID
  id              BigInt           @id @default(autoincrement()) @map("id")
  // 所属的产品ID
  productId       BigInt?          @map("product_id")
  // 关联的产品
  product         Product?         @relation(fields: [productId], references: [id])
  // 领域名称
  name            String
  // 描述
  desc            String?          @map("desc") @db.Text
  // 版本号
  versionNum      BigInt           @default(1) @map("version_num")
  // 创建者
  createBy        BigInt           @map("create_by")
  // 创建时间
  createAt        DateTime         @default(now()) @map("create_at")
  // 更新者
  updateBy        BigInt           @map("update_by")
  // 更新时间
  updateAt        DateTime         @updatedAt @map("update_at")
  // 域下的产品特性
  productFeatures ProductFeature[]
  Entity          Entity[]
  EntityField     EntityField[]

  @@index([productId])
  @@map("ddd_domain")
}

// 产品特性表
model ProductFeature {
  // 特性ID
  id         BigInt   @id @default(autoincrement()) @map("id")
  // 所属的产品ID
  productId  BigInt   @map("product_id")
  // 所属的域ID
  domainId   BigInt?  @map("domain_id")
  // 关联的产品
  Product    Product  @relation(fields: [productId], references: [id])
  // 可能的关联域
  domain     Domain?  @relation(fields: [domainId], references: [id])
  // 标题
  title      String   @map("title") @db.VarChar(240)
  // 描述
  desc       String?  @db.Text
  // 事件
  event      String   @db.Text
  // 命令
  command    String   @db.Text
  // 角色
  role       String   @db.Text
  // 版本号
  versionNum BigInt   @default(1) @map("version_num")
  // 创建者
  createBy   BigInt   @map("create_by")
  // 创建时间
  createAt   DateTime @default(now()) @map("create_at")
  // 更新者
  updateBy   BigInt   @map("update_by")
  // 更新时间
  updateAt   DateTime @updatedAt @map("update_at")

  @@index([productId])
  @@index([domainId])
  @@map("ddd_product_feature")
}

// 领域实体表
model Entity {
  // 域ID
  id          BigInt        @id @default(autoincrement()) @map("id")
  // 所属的领域ID
  domainId    BigInt        @map("domain_id")
  // 关联的领域
  domain      Domain        @relation(fields: [domainId], references: [id])
  // 实体名称
  name        String
  // 描述
  desc        String
  // 版本号
  versionNum  BigInt        @default(1) @map("version_num")
  // 创建者
  createBy    BigInt        @map("create_by")
  // 创建时间
  createAt    DateTime      @default(now()) @map("create_at")
  // 更新者
  updateBy    BigInt        @map("update_by")
  // 更新时间
  updateAt    DateTime      @updatedAt @map("update_at")
  EntityField EntityField[]

  @@index([domainId])
  @@map("ddd_entity")
}

// 领域实体字段表
model EntityField {
  // 域ID
  id           BigInt   @id @default(autoincrement()) @map("id")
  // 所属的产品ID
  entityId     BigInt?  @map("entity_id")
  // 关联的实体
  entity       Entity?  @relation(fields: [entityId], references: [id])
  // 所属的领域ID
  domainId     BigInt?  @map("domain_id")
  // 关联的领域
  domain       Domain?  @relation(fields: [domainId], references: [id])
  // 字段名称
  name         String
  // 字段类型
  type         String
  // 默认值
  defaultValue String?
  // 是否必填
  isRequired   Boolean
  // 字典
  dict         String?
  // 字段描述
  desc         String
  // 版本号
  versionNum   BigInt   @default(1) @map("version_num")
  // 创建者
  createBy     BigInt   @map("create_by")
  // 创建时间
  createAt     DateTime @default(now()) @map("create_at")
  // 更新者
  updateBy     BigInt   @map("update_by")
  // 更新时间
  updateAt     DateTime @updatedAt @map("update_at")

  @@index([entityId])
  @@map("ddd_entity_field")
}
