{
  "name": "iam",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/iam/src",
  "prefix": "pisces",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "@nx/angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "iam:build-frontend:production"
        },
        "development": {
          "buildTarget": "iam:build-frontend:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "host": "0.0.0.0",
        "port": 4300,
        "hmr": true,
        "esbuildMiddleware": [
          "packages/iam/test.ts"
        ]
      }
    },
    "build-frontend": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "api/iam",
        "index": "libs/frontend/src/index.html",
        "browser": "packages/iam/src/app/main.frontend.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "packages/iam/tsconfig.frontend.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "packages/iam/src/resource/assets",
            "output": "/assets"
          }
        ],
        "allowedCommonJsDependencies": [
          "base64-js",
          "lodash",
          "moment"
        ],
        "styles": [
          "libs/frontend/src/styles.scss",
          "@blocksuite/presets/themes/affine.css"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true,
          "watch": true
        }
      },
      "defaultConfiguration": "production"
    },
    "build-backend": {
      "executor": "@nx/webpack:webpack",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "api/iam",
        "target": "node",
        "compiler": "tsc",
        "main": "packages/iam/src/app/main.backend.ts",
        "tsConfig": "packages/iam/tsconfig.backend.json",
        "webpackConfig": "libs/backend/webpack.config.ts"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "options": {
        "commands": [
          "nx run iam:build-frontend",
          "nx run iam:build-backend"
        ],
        "parallel": true
      },
      "configurations": {
        "development": {
          "commands": [
            "nx run iam:build-frontend:development",
            "nx run iam:build-backend:development"
          ]
        },
        "production": {
          "commands": [
            "nx run iam:build-frontend:production",
            "nx run iam:build-backend:production"
          ]
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "frontend:build"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "frontend:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/iam/**/*.ts",
          "packages/iam/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/iam/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-backend": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "iam:build-backend"
      },
      "configurations": {
        "development": {
          "buildTarget": "iam:build-backend:development"
        },
        "production": {
          "buildTarget": "iam:build-backend:production"
        }
      }
    }
  },
  "tags": []
}
